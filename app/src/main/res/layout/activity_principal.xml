<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Medico.PrincipalActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:id="@+id/btnvolver"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:contentDescription="@string/menu"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:backgroundTint="@color/white"
            app:layout_constraintBottom_toTopOf="@+id/contenedor1"
            app:layout_constraintEnd_toStartOf="@+id/btnrefresh"
            app:layout_constraintHorizontal_bias="0.049"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_menu_black_36"
            app:tint="@color/browser_actions_title_color" />

        <ImageButton
            android:id="@+id/btnrefresh"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:backgroundTint="@color/white"
            android:contentDescription="@string/actualizar"
            app:layout_constraintBottom_toTopOf="@+id/contenedor2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.956"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_autorenew_black_36"
            app:tint="@color/browser_actions_title_color" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="116dp"
            android:layout_height="32dp"
            android:layout_marginTop="17dp"
            android:layout_marginBottom="22dp"
            android:fontFamily="monospace"
            android:text="@string/principal"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/contenedor2"
            app:layout_constraintEnd_toStartOf="@+id/btnrefresh"
            app:layout_constraintStart_toEndOf="@+id/btnvolver"
            app:layout_constraintTop_toTopOf="parent"
            />

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/contenedor1"
            android:layout_width="188dp"
            android:layout_height="260dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/contenedor_redondeado"
            android:textAlignment="center"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toTopOf="@+id/contenedor3"
            app:layout_constraintEnd_toStartOf="@+id/contenedor2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:onClick="onClickNotificaciones">
            <TextView
                android:id="@+id/NotificacionesSinRevisar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="username"
                android:ems="10"
                android:labelFor="@id/NotificacionesSinRevisar"
                android:text="@string/notificaciones_sin_revisar"
                android:textAlignment="center"
                />
            </RelativeLayout>
        </com.google.android.material.navigation.NavigationView>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/contenedor2"
            android:layout_width="188dp"
            android:layout_height="260dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="3dp"
            android:textAlignment="center"
            android:clickable="true"
            android:background="@drawable/contenedor_redondeado"
            android:focusable="true"
            app:layout_constraintBottom_toTopOf="@+id/contenedor4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/contenedor1"
            app:layout_constraintTop_toTopOf="parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:onClick="onClickListaPacientes">
            <TextView
                android:id="@+id/pacientes_punto_critico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="username"
                android:ems="10"
                android:labelFor="@+id/pacientes_punto_critico"
                android:text="@string/pacientes_punto_critico"
                android:textAlignment="center" />
            </RelativeLayout>
        </com.google.android.material.navigation.NavigationView>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/contenedor3"
            android:layout_width="188dp"
            android:layout_height="165dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/contenedor_redondeado"
            android:textAlignment="center"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toTopOf="@+id/contenedor5"
            app:layout_constraintEnd_toStartOf="@+id/contenedor4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contenedor1"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:onClick="onClickListaPacientes">
            <TextView
                android:id="@+id/nuevos_pacientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="username"
                android:ems="10"
                android:labelFor="@+id/nuevos_pacientes"
                android:text="@string/nuevos_pacientes"
                android:textAlignment="center"/>
            </RelativeLayout>
        </com.google.android.material.navigation.NavigationView>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/contenedor4"
            android:layout_width="188dp"
            android:layout_height="165dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/contenedor_redondeado"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@+id/contenedor5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/contenedor3"
            app:layout_constraintTop_toBottomOf="@+id/contenedor2">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:onClick="onClickVistaPaciente">
            <TextView
                android:id="@+id/n_total_de_pacientes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="username"
                android:ems="10"
                android:labelFor="@+id/n_total_de_pacientes"
                android:text="@string/n_total_de_pacientes"
                android:clickable="true"
                android:textAlignment="center"/>

                <com.jjoe64.graphview.GraphView
                    android:id="@+id/graficaPpal"
                    android:layout_width="154dp"
                    android:layout_height="114dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="21dp"
                    android:visibility="visible"
                    android:onClick="onClickVistaPaciente"
                    android:contentDescription="Grafica paciente"/>
            </RelativeLayout>

        </com.google.android.material.navigation.NavigationView>

        <com.google.android.material.navigation.NavigationView
            android:id="@+id/contenedor5"
            android:layout_width="380dp"
            android:layout_height="155dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/contenedor_redondeado"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintVertical_bias="1.0">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true">

                <TextView
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="25dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@id/notificaciones"
                    android:backgroundTint="#FFFFFF"
                    android:gravity="center_horizontal"
                    android:shadowColor="@color/white"
                    android:text="@string/alertas"
                    android:textColor="#757575"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onClickNotificaciones"/>

                <TextView
                    android:id="@+id/notificaciones"
                    android:layout_width="154dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="7dp"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="#FFFFFF"
                    android:gravity="center_horizontal"
                    android:labelFor="@string/notificaciones"
                    android:shadowColor="@color/white"
                    android:text="@string/Notificaciones"
                    android:textAlignment="center"
                    android:textColor="#757575"
                    android:clickable="true"
                    android:focusable="true"
                    android:onClick="onClickNotificaciones"/>
            </RelativeLayout>
        </com.google.android.material.navigation.NavigationView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_lateral"
        app:headerLayout="@layout/cabecera_menu_lateral">
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>